{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            {% include 'cup/form-header.twig' with {
                'item': item,
                'create': 'Создание новой формы',
                'update': 'Редактирование формы'
            } only %}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form method="post">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <ul class="nav nav-pills nav-secondary nav-pills-no-bd ml-auto" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active show" data-toggle="pill" href="#form" role="tab">
                                        {{ 'Форма'|locale }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#recipient" role="tab">
                                        {{ 'Получатели'|locale }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#other" role="tab">
                                        {{ 'Другое'|locale }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            {# Tab: Форма #}
                            <div class="tab-pane fade show active" id="form" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Название'|locale,
                                            'type': 'text',
                                            'name': 'title',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('Краткое описание формы'|locale) ~ '"></i>',
                                            'args': {
                                                'value': item.title,
                                                'required': true,
                                                'placeholder': 'Форма контактов'|locale,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-12">
                                        {% include 'cup/editor.twig' with {
                                            'label': 'Шаблон письма'|locale,
                                            'name': 'template',
                                            'args': {
                                                'value': item.template
                                            }
                                        } %}
                                    </div>

                                    <div class="col-md-12">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Шаблон письма'|locale,
                                            'type': 'text',
                                            'name': 'templateFile',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" data-html="true" title="' ~ ('Укажите название шаблона, который хотите использовать для данной формы или оставьте поле пустым')|locale ~ '"></i>',
                                            'args': {
                                                'value': item.templateFile,
                                                'placeholder': 'mail.contact-form.twig',
                                                'autocomplete':'off',
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>

                            {# Tab: Получатели #}
                            <div class="tab-pane fade" id="recipient" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'E-Mail адреса получателей'|locale,
                                            'message': 'Каждая новая строка должна быть отдельным E-Mail адресом получателя. Используйте символ ":" для разделения E-Mail:Имя получателя'|locale,
                                            'type': 'textarea',
                                            'name': 'mailto',
                                            'args': {
                                                'value': item.mailto ? item.mailto|join('\n') : user.getEmail(),
                                                'required': true,
                                                'placeholder': 'manager@example.com',
                                                'style': 'min-height: 133px;'
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Включить отправку копии заявителю'|locale,
                                            'message': 'Копия формы будет отправлена заявителю, если будет найдено заполенное поле <code>email</code>.<br/>По-умолчанию: выключено'|locale,
                                            'type': 'select',
                                            'name': 'authorSend',
                                            'args': {
                                                'option': _(['yes', 'no']),
                                                'selected': item.authorSend ? 'yes' : 'no'
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>

                            {# Tab: Другое #}
                            <div class="tab-pane fade" id="other" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Адреса страниц использования'|locale,
                                            'message': 'Каждая новая строка должна быть отдельным адресом страницы где размещена форма. Используйте символ "*" для указания любого адреса страницы.'|locale,
                                            'type': 'textarea',
                                            'name': 'origin',
                                            'args': {
                                                'value': item.origin ? item.origin|join('\n') : '*',
                                                'required': true,
                                                'placeholder': full_url_for('common:main'),
                                                'style': 'min-height: 133px;'
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Адрес обработчика формы'|locale,
                                            'type': 'text',
                                            'name': 'address',
                                            'prefix': base_url() ~ '/form/',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="Адрес формы. Можно оставить пустым, тогда значение будет сгенерировано автоматически. Допустимо использование только латинских символов и цифер без пробелов"></i>',
                                            'args': {
                                                'value': item.address,
                                                'placeholder': 'contact-form',
                                            }
                                        } %}
                                        {% include 'cup/form.twig' with {
                                            'label': 'Включить проверку reCAPTCHA'|locale,
                                            'message': 'Возможность отключить проверку reCAPTCHA индивидуально для текущей формы.<br/>По-умолчанию: включено'|locale,
                                            'type': 'select',
                                            'name': 'recaptcha',
                                            'args': {
                                                'option': _(['yes', 'no']),
                                                'selected': item ? (item.recaptcha ? 'yes' : 'no') : 'yes'
                                            }
                                        } %}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Дублировать данные'|locale,
                                            'message': 'Полученные данные будут продублированы на указанный адрес в формате JSON'|locale,
                                            'type': 'text',
                                            'name': 'duplicate',
                                            'args': {
                                                'value': item.duplicate,
                                                'placeholder': 'https://example.com/api/form-data',
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

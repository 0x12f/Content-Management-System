        <tr>
            <th>Параметр</th>
            <th>Обязательный?</th>
            <th>Описание</th>
        </tr>
        <tr>
            <td>uuid[]</td>
            <td></td>
            <td>Уникальный идентификатор публикации</td>
        </tr>
        <tr>
            <td>category[]</td>
            <td></td>
            <td>Идентификатор родительской категории</td>
        </tr>
        <tr>
            <td>address</td>
            <td></td>
            <td>Адрес публикации</td>
        </tr>

        <tr>
            <td>order[]</td>
            <td></td>
            <td>Сортировка по указанным полям</td>
        </tr>
        <tr>
            <td>limit</td>
            <td></td>
            <td>
                Количество строк результатов
                <span class="d-block text-muted">по-умолчанию: 10</span>
            </td>
        </tr>
        <tr>
            <td>offset</td>
            <td></td>
            <td>
                Отступ строк от начала
                <span class="d-block text-muted">по-умолчанию: 0</span>
            </td>
        </tr>
    </table>

</div>

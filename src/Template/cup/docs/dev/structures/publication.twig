<div class="pt-2">
    <h3>Модель публикации</h3>

    <code class="block pt-3 pb-3">App\Domain\Entities\Publication</code>

    <ul class="mt-3 mb-3">
        <li>Поля</li>
        <li>Методы</li>
    </ul>

    <h4>Поля</h4>
    {% include "cup/docs/dev/structures-table-fields.twig" with {
        "list": collect([
            {
                "field": "uuid",
                "type": "Uuid(36)",
                "description": "Уникальный идентификатор",
                "requried": true,
                "unique": true,
            },
            {
                "field": "address",
                "type": "String(255)",
                "description": "Уникальный адрес публикации",
                "requried": true,
                "unique": true,
            },
            {
                "field": "title",
                "type": "String(255)",
                "description": "Заголовок публикации",
                "requried": true,
            },
            {
                "field": "category",
                "type": "Uuid(36)",
                "description": "Идентификатор категории публикаций",
                "requried": true,
            },
            {
                "field": "date",
                "type": "DateTime",
                "description": "Дата публикации",
                "requried": true,
            },
            {
                "field": "content",
                "type": "array[short,full]",
                "description": "Содержимое публикации",
            },
            {
                "field": "poll",
                "type": "array[question,answer]",
                "description": "Опрос в публикации",
            },
            {
                "field": "meta",
                "type": "array[title,description,keywords]",
                "description": "Мета теги",
            }
        ])
    } %}

    <h4>Методы</h4>
    {% include "cup/docs/dev/structures-table-methods.twig" with {
        "list": collect([
            {
                "signature": "addFile(App\\Domain\\Entities\\File $file)",
                "description": "Добавление файла",
            },
            {
                "signature": "addFiles(array $files)",
                "description": "Добавление нескольких файлов",
            },
            {
                "signature": "removeFile(App\\Domain\\Entities\\File $file)",
                "description": "Удаление файла",
            },
            {
                "signature": "removeFiles(array $files)",
                "description": "Удаление нескольких файлов",
            },
            {
                "signature": "clearFiles()",
                "description": "Удаление всех файлов",
            },
            {
                "signature": "getFiles($raw = false)",
                "description": "Получение списка файлов",
                "args": {"raw": ['true - вернет array', 'false - вернет Collection']},
            },
            {
                "signature": "hasFiles()",
                "description": "Вернет true если есть файлы",
            },
        ])
    } %}
</div>

<div class="row">
    <div class="col-12" style="overflow-x: scroll;">
        <table class="table">
            <tr>
                <th>Переменная</th>
                <th width="10%">Тип</th>
                <th>Описание</th>
            </tr>
            {% for item in list %}
                <tr>
                    <td>{{ item.field }}</td>
                    <td>{{ item.type }}</td>
                    <td>
                        {{ item.description|raw }}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>

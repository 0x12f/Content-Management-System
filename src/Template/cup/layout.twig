{% extends 'layout.twig' %}

{% block title %}ЦУП CMS{% endblock %}

{% block head %}
    {% resource 'font-awesome:all.min.css' '5.15.3' %}
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css?v={{ sha }}">
    <link rel="stylesheet" href="/assets/js/plugin/jquery.modal/jquery.modal.min.css?v={{ sha }}">
    <link rel="stylesheet" href="/assets/css/atlantis.css?v={{ sha }}">
    <meta name="theme-color" content="#1572e8">
{% endblock %}

{% block body %}
    <body data-background-color="bg3">
        {% block bodyinner %}
            <div class="wrapper">
                <div class="main-header">
                    <!-- Logo Header -->
                    <div class="logo-header" data-background-color="blue">
                        <a href="/cup" class="logo text-white">WebSpace Engine</a>

                        <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse" data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon">
                                <i class="fas fa-bars"></i>
                            </span>
                        </button>
                        <button class="topbar-toggler more"><i class="fas fa-bars"></i></button>
                        <div class="nav-toggle">
                            <button class="btn btn-toggle toggle-sidebar">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                    </div>
                    <!-- End Logo Header -->

                    <!-- Navbar Header -->
                    <nav class="navbar navbar-header navbar-expand-lg" data-background-color="blue2">
                        <div class="container-fluid">

                            {% if user and ('cup:main' in user.group.access) %}
                                <ul class="navbar-nav topbar-nav mr-md-auto align-items-center">
                                    <li class="nav-item">
                                        {% include 'cup/donate.twig' %}
                                    </li>
                                </ul>

                                {% if parameter('common_site_enabled', 'yes') != 'yes' %}
                                    <a href="/cup/parameters" class="d-block badge badge-danger mx-2 mt-2 mb-1 w-100">
                                        {{ 'Сайт отключен!'|locale }}
                                    </a>
                                {% endif %}

                                <ul class="navbar-nav topbar-nav ml-md-2 align-items-center">
                                    {% for plugin in plugins %}
                                        {% for param in plugin.getToolbarItem() %}
                                            {% if param.twig %}
                                                {% include param.twig %}
                                            {% elseif param.html %}
                                                {{ param.html|raw }}
                                            {% endif %}
                                        {% endfor %}
                                    {% endfor %}

                                    <li class="nav-item">
                                        <a href="#" class="nav-link quick-sidebar-toggler">
                                            <i class="fa fa-th"></i>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="/" target="_blank">
                                            <i class="fas fa-globe"></i>
                                        </a>
                                    </li>

                                    <li class="nav-item dropdown hidden-caret">
                                        <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false">
                                            <div class="avatar-sm">
                                                <img src="{{ user.avatar(40) }}" alt="{{ user.firstname }}" class="avatar-img rounded-circle">
                                            </div>
                                        </a>
                                        <ul class="dropdown-menu dropdown-user animated fadeIn">
                                            <div class="dropdown-user-scroll scrollbar-outer">
                                                <li>
                                                    <div class="user-box">
                                                        <div class="avatar-lg"><img src="{{ user.avatar(60) }}" alt="image profile" class="avatar-img rounded"></div>
                                                        <div class="u-text">
                                                            <h4>{{ user.getName('short') }}</h4>
                                                            <p class="text-muted">{{ user.email }}</p>
                                                        </div>
                                                    </div>
                                                </li>
                                                <li>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="/cup/user/{{ user.uuid }}/edit">{{ 'Профиль'|locale }}</a>
                                                </li>
                                                <li>
                                                    <div class="dropdown-divider"></div>
                                                    <a class="dropdown-item" href="/user/logout">{{ 'Выход'|locale }}</a>
                                                </li>
                                            </div>
                                        </ul>
                                    </li>
                                </ul>
                            {% endif %}
                        </div>
                    </nav>
                    <!-- End Navbar -->
                </div>

                <!-- Sidebar -->
                <div class="sidebar sidebar-style-2" data-background-color="">
                    <div class="sidebar-wrapper scrollbar scrollbar-inner">
                        <div class="sidebar-content">
                            {% include 'cup/navigation.twig'  %}
                        </div>
                    </div>
                </div>
                <!-- End Sidebar -->

                <div class="main-panel">
                    {% block panelinner %}
                        <div class="content">
                            <div class="panel-header bg-primary-gradient">
                                {% block breadcrumb %}
                                    <div class="page-inner py-5">
                                        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
                                            <div>
                                                <h2 class="text-white pb-2 fw-bold">{{ 'Панель управления'|locale }}</h2>
                                                <h5 class="text-white op-7 mb-2">{{ 'Добро пожаловать в панель управления сайтом'|locale }}</h5>
                                            </div>
                                            <div class="ml-md-auto py-2 py-md-0">
                                                {#<a href="#" class="btn btn-white btn-border btn-round mr-2">Manage</a>
                                                <a href="#" class="btn btn-secondary btn-round">Add Customer</a>#}
                                            </div>
                                        </div>
                                    </div>
                                {% endblock %}
                            </div>

                            <div class="page-inner container-xl float-left mt--5">
                                {% if _error is not empty %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card bg-danger">
                                                <div class="card-header text-center">
                                                    <h4 class="card-title text-white">{{ 'Обнаружены ошибки' }} ({{ _error|count }})</h4>
                                                    <p class="text-white my-0">
                                                        {% locale %}
                                                            В форме обнаружены ошибки, пожалуйста,
                                                            проверьте поля выделенные красным цветом,
                                                            исправьте ошибки и попробуйте снова.
                                                        {% endlocale %}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% block content %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card full-height">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-12 col-sm-6 col-lg-4">
                                                            <a href="/cup/user" class="card card-stats card-primary card-round">
                                                                <div class="card-body">
                                                                    <p class="card-category">
                                                                        <b>{{ 'Редактирование пользователей'|locale }}</b><br>
                                                                        {% locale %}
                                                                            Управление зарегистрированными
                                                                            пользователями, редактирование их профилей
                                                                            и блокировка
                                                                        {% endlocale %}
                                                                    </p>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <div class="col-12 col-sm-6 col-lg-4">
                                                            <a href="/cup/publication" class="card card-stats card-primary card-round">
                                                                <div class="card-body">
                                                                    <p class="card-category">
                                                                        <b>{{ 'Управление публикациями'|locale }}</b><br>
                                                                        {% locale %}
                                                                            Раздел управления статьями, новостями,
                                                                            записями в личный блог
                                                                        {% endlocale %}
                                                                    </p>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <div class="col-12 col-sm-6 col-lg-4">
                                                            <a href="/cup/page" class="card card-stats card-primary card-round">
                                                                <div class="card-body">
                                                                    <p class="card-category">
                                                                        <b>{{ 'Страницы сайта'|locale }}</b><br>
                                                                        {% locale %}
                                                                            Создание и редактирование страниц, которые
                                                                            как правило редко изменяются и имеют
                                                                            постоянный адрес
                                                                        {% endlocale %}
                                                                    </p>
                                                                </div>
                                                            </a>
                                                        </div>
                                                        {% if parameter('catalog_is_enabled', 'yes') != 'no' %}
                                                            <div class="col-12 col-sm-6 col-lg-4">
                                                                <a href="/cup/catalog/product" class="card card-stats card-primary card-round">
                                                                    <div class="card-body">
                                                                        <p class="card-category">
                                                                            <b>{{ 'Номенклатура товаров'|locale }}</b><br>
                                                                            {% locale %}
                                                                                Управление товарами и услугами сайта,
                                                                                добавление новых позиций и изменение
                                                                                существующих
                                                                            {% endlocale %}
                                                                        </p>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                            <div class="col-12 col-sm-6 col-lg-4">
                                                                <a href="/cup/catalog/product" class="card card-stats card-primary card-round">
                                                                    <div class="card-body">
                                                                        <p class="card-category">
                                                                            <b>{{ 'Категории магазина'|locale }}</b><br>
                                                                            {% locale %}
                                                                                Создание и редактирование категорий
                                                                                товаров, изменение описания и
                                                                                приложенных фотографий
                                                                            {% endlocale %}
                                                                        </p>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                        {% if parameter('guestbook_is_enabled', 'yes') != 'no' %}
                                                            <div class="col-12 col-sm-6 col-lg-4">
                                                                <a href="/cup/guestbook" class="card card-stats card-primary card-round">
                                                                    <div class="card-body">
                                                                        <p class="card-category">
                                                                            <b>{{ 'Гостевая книга и отзывы'|locale }}</b><br>
                                                                            {% locale %}
                                                                                Просмотр отзывов посетителей о сайте,
                                                                                изменение и управление ответами
                                                                            {% endlocale %}
                                                                        </p>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                        {% if parameter('form_is_enabled', 'yes') != 'no' %}
                                                            <div class="col-12 col-sm-6 col-lg-4">
                                                                <a href="/cup/form" class="card card-stats card-primary card-round">
                                                                    <div class="card-body">
                                                                        <p class="card-category">
                                                                            <b>{{ 'Формы связи'|locale }}</b><br>
                                                                            {% locale %}
                                                                                Создание и редактирование форм обратной
                                                                                связи, настройка формата письма
                                                                            {% endlocale %}
                                                                        </p>
                                                                    </div>
                                                                </a>
                                                            </div>
                                                        {% endif %}
                                                        <div class="col-12 col-sm-6 col-lg-4">
                                                            <a href="/cup/parameters" class="card card-stats card-primary card-round">
                                                                <div class="card-body">
                                                                    <p class="card-category">
                                                                        <b>{{ 'Настройки системы'|locale }}</b><br>
                                                                        {% locale %}
                                                                            Настройка общих параметров скрипта, а также
                                                                            настройка вывода новостей, каталога,
                                                                            плагинов
                                                                        {% endlocale %}
                                                                    </p>
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card full-height">
                                                <div class="card-header">
                                                    <ul class="nav nav-pills nav-secondary nav-pills-no-bd justify-content-center" role="tablist">
                                                        <li class="nav-item">
                                                            <a class="nav-link active show" data-toggle="pill" href="#stats" role="tab">
                                                                {{ 'Сводка сайта'|locale }}
                                                            </a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link" data-toggle="pill" href="#notepad" role="tab">
                                                                {{ 'Блокнот'|locale }}
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <div class="card-body">
                                                    <div class="tab-content">

                                                        {# Tab: Сводка #}
                                                        <div class="tab-pane fade show active" id="stats" role="tabpanel">
                                                            <div class="row">
                                                                <div class="col-12 col-md-6">
                                                                    <p class="text-muted text-center">{{ 'Ниже отображается статистика использования движка по разделам'|locale }}</p>

                                                                    <table class="table table-stats">
                                                                        {% if stats.pages %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество страниц'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.pages }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.publications %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество публикаций'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.publications }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.guestbook %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество отзывов'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.guestbook }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.users %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество пользователей'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.users }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.catalog.category or stats.catalog.product %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество категорий и товаров'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.catalog.category }} | {{ stats.catalog.product }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.catalog.order %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество заказов'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.catalog.order }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if stats.files %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество файлов'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ stats.files }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if plugins.count() %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Количество плагинов'|locale }}:</th>
                                                                                <td width="50%" class="text-center">
                                                                                    {{ plugins.count() }}
                                                                                </td>
                                                                            </tr>
                                                                        {% endif %}
                                                                    </table>
                                                                </div>
                                                                <div class="col-12 col-md-6 border-left">
                                                                    <p class="text-muted text-center">{{ 'Здесь собрана техническая информация о движке и сервере'|locale }}</p>

                                                                    <table class="table table-properties">
                                                                        <tr>
                                                                            <th width="50%">{{ 'Сборка'|locale }}:</th>
                                                                            <td width="50%" class="text-center">
                                                                                {{ properties.version.branch }}
                                                                                (<a href="https://github.com/getwebspace/platform/tree/{{ properties.version.commit }}" target="_blank">{{ sha }}</a>)
                                                                            </td>
                                                                        </tr>
                                                                        <tr>
                                                                            <th width="50%">{{ 'Операционная система'|locale }}:</th>
                                                                            <td width="50%" class="text-center">{{ properties.os }}</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <th width="50%">{{ 'Версия PHP'|locale }}:</th>
                                                                            <td width="50%" class="text-center">{{ properties.php }}</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <th width="50%">{{ 'Выделено ОЗУ'|locale }}:</th>
                                                                            <td width="50%" class="text-center">{{ properties.memory_limit }}</td>
                                                                        </tr>
                                                                        {% if properties.disable_functions %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Отключенные функции'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ properties.disable_functions }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        {% if properties.disable_classes %}
                                                                            <tr>
                                                                                <th width="50%">{{ 'Отключенные классы'|locale }}:</th>
                                                                                <td width="50%" class="text-center">{{ properties.disable_classes }}</td>
                                                                            </tr>
                                                                        {% endif %}
                                                                        <tr>
                                                                            <th width="50%">{{ 'Максимальный размер загружаемого файла'|locale }}:</th>
                                                                            <td width="50%" class="text-center">{{ properties.upload_max_filesize }}</td>
                                                                        </tr>
                                                                        <tr>
                                                                            <th width="50%">{{ 'Максимальное количество загружаемых файлов'|locale }}:</th>
                                                                            <td width="50%" class="text-center">{{ properties.max_file_uploads }}</td>
                                                                        </tr>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        {# Tab: Блокнот #}
                                                        <div class="tab-pane fade" id="notepad" role="tabpanel">
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <form action="/cup/parameters?return=/cup" method="post">
                                                                        <p class="text-muted text-center mb-0">{{ 'Здесь вы можете сохранять собственные заметки и памятки'|locale }}</p>

                                                                        {% include 'cup/editor.twig' with {
                                                                            'name': 'notepad[' ~ user.username ~ ']',
                                                                            'args': {
                                                                                'value': notepad,
                                                                                'required': true,
                                                                            }
                                                                        } %}
                                                                        <button type="submit" class="btn btn-success ml-2">{{ 'Сохранить'|locale }}</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endblock %}
                            </div>
                        </div>
                    {% endblock %}

                    <footer class="footer">
                        <div class="container-fluid">
                            <div class="copyright mr-auto">
                                Copyright &copy; 2011-{{ 'now'|df('Y') }} <a href="https://getwebspace.org" target="_blank">WebSpace Engine</a> &mdash; {{ 'платформа для управления контентом на сайте'|locale }}.<br>
                                {{ 'Сборка'|locale }}: <span class="text-muted">{{ sha }}</span>
                            </div>
                            <nav class="pull-right">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://github.com/getwebspace/platform" target="_blank">
                                            GitHub
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://github.com/getwebspace/platform/wiki" target="_blank">
                                            {{ 'Документация'|locale }}
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="https://github.com/getwebspace/platform/issues" target="_blank">
                                            {{ 'Поддержка'|locale }}
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </footer>
                </div>

                {% include 'cup/sidebar.twig' %}
            </div>
        {% endblock %}
    </body>

    <script src="/assets/js/core/jquery.3.2.1.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/popper.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/tooltip.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/bootstrap.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/bootstrap-tagsinput.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/moment.min.js?v={{ sha }}"></script>
    <script src="/assets/js/core/moment-with-locales.min.js?v={{ sha }}"></script>

    <script src="/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/jquery-ui-touch-punch/jquery.ui.touch-punch.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/jquery.modal/jquery.modal.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/sweetalert/sweetalert2.all.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/select2/select2.full.min.js?v={{ sha }}"></script>
    <script src="/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js?v={{ sha }}"></script>

    <script src="/assets/js/cup/script.js?v={{ sha }}"></script>

    {% block script '' %}
{% endblock %}

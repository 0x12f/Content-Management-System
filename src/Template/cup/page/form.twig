{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">{{ (item.uuid ? 'Редактирование страницы' : 'Создание новой страницы')|locale }}</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <ul class="nav nav-pills nav-secondary nav-pills-no-bd ml-auto" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active show" data-toggle="pill" href="#page" role="tab">
                                        {{ 'Страница'|locale }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#other" role="tab">
                                        {{ 'Дополнительно'|locale }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            {# Tab: Товар #}
                            <div class="tab-pane fade show active" id="page" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Название'|locale,
                                            'type': 'text',
                                            'name': 'title',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('Краткое описание страницы'|locale) ~ '"></i>',
                                            'args': {
                                                'value': item.title,
                                                'required': true,
                                                'placeholder': 'О нас'|locale,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Адрес'|locale,
                                            'type': 'text',
                                            'name': 'address',
                                            'prefix': base_url() ~ '/',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('Название страницы. Можно оставить пустым, тогда значение будет сгенерировано автоматически. Допустимо использование только латинских символов и цифер без пробелов')|locale ~ '"></i>',
                                            'args': {
                                                'value': item.address,
                                                'placeholder': 'about',
                                            }
                                        } %}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        {% include 'cup/editor.twig' with {
                                            'label': 'Тело страницы'|locale,
                                            'name': 'content',
                                            'args': {
                                                'value': item.content
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>

                            {# Tab: Дополнительно #}
                            <div class="tab-pane fade" id="other" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Дата'|locale,
                                            'type': 'datetime',
                                            'name': 'date',
                                            'args': {
                                                'value': item.date|df('Y-m-d\\TH:i'),
                                                'placeholder': '20.01.2019 12:34',
                                            }
                                        } %}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Тип содержимого'|locale,
                                            'type': 'select',
                                            'name': 'type',
                                            'message': 'Если нет понимания на что влияет это поле, оставьте значение по-умолчанию'|locale,
                                            'args': {
                                                'option': _(reference('/App/Domain/Types/PageTypeType::LIST')),
                                                'selected': item.type
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Шаблон'|locale,
                                            'type': 'text',
                                            'name': 'template',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" data-html="true" title="' ~ ('Укажите название шаблона, который хотите использовать для данной страницы или оставьте <b>page.twig</b>')|locale ~ '"></i>',
                                            'args': {
                                                'value': item.template is not empty ? item.template : 'page.twig',
                                                'required': true,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                {% include 'cup/form-image.twig' with { 'entity': item } %}

                                <hr>

                                <div class="row">
                                    <div class="col-md-4">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Метатег Title'|locale,
                                            'type': 'text',
                                            'name': 'meta[title]',
                                            'args': {
                                                'value': item.meta.title,
                                            }
                                        } %}
                                    </div>

                                    <div class="col-md-4">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Метатег Description'|locale,
                                            'type': 'text',
                                            'name': 'meta[description]',
                                            'args': {
                                                'value': item.meta.description,
                                            }
                                        } %}
                                    </div>

                                    <div class="col-md-4">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Метатег Keywords'|locale,
                                            'type': 'text',
                                            'name': 'meta[keywords]',
                                            'args': {
                                                'value': item.meta.keywords,
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

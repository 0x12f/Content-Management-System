{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Редактирование записи</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form method="post">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Имя',
                                    'type': 'text',
                                    'name': 'name',
                                    'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="Нельзя изменять значение поля"></i>',
                                    'args': {
                                        'value': item.name,
                                        'readonly': true
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'E-Mail',
                                    'type': 'email',
                                    'name': 'email',
                                    'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="Нельзя изменять значение поля"></i>',
                                    'args': {
                                        'value': item.email,
                                        'readonly': true
                                    }
                                } %}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/editor.twig' with {
                                    'label': 'Сообщение',
                                    'name': 'message',
                                    'args': {
                                        'value': item.message,
                                        'text_mode': true
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/editor.twig' with {
                                    'label': 'Ответ',
                                    'name': 'response',
                                    'args': {
                                        'value': item.response,
                                        'text_mode': true
                                    }
                                } %}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Дата',
                                    'type': 'datetime',
                                    'name': 'date',
                                    'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="Нельзя изменять значение поля"></i>',
                                    'args': {
                                        'value': item.date|df('Y-m-d\\TH:i'),
                                        'readonly': true
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Статус',
                                    'type': 'select',
                                    'name': 'status',
                                    'args': {
                                        'option': _(reference('/App/Domain/Types/GuestBookStatusType::LIST')),
                                        'selected': item.status
                                    }
                                } %}
                            </div>
                        </div>
                    </div>

                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

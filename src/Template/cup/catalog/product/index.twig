{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Каталог</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Список товаров {{ category ? 'в категории ' ~ category.title : '' }} ({{ products.count() }})</h4>
                        <a href="/cup/catalog/product/add{{ category ? '?category=' ~ category.uuid : '' }}" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Добавить товар
                        </a>

                        {% if category %}
                            <a href="/cup/catalog/product/{{ category.parent }}" class="btn btn-secondary btn-round ml-1">
                                <i class="fas fa-arrow-up"></i>
                            </a>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table data-table class="display table table-striped table-hover" >
                            <thead>
                                <tr>
                                    {# поле для сортировки данных в таблице #}
                                    <th style="display: none"></th>
                                    <th>Артикул</th>
                                    <th>Наименование</th>
                                    <th>Категория</th>
                                    <th>Цена</th>
                                    <th width="10%">{{ category.product.field_1 ?? 'Поле 1' }}</th>
                                    <th width="10%">{{ category.product.field_2 ?? 'Поле 2' }}</th>
                                    <th width="10%">{{ category.product.field_3 ?? 'Поле 3' }}</th>
                                    <th width="8%" class="text-center"><i class="fas fa-boxes" data-toggle="tooltip" data-placement="top" title="Объем упаковки"></i></th>
                                    <th width="8%" class="text-center"><i class="fas fa-warehouse" data-toggle="tooltip" data-placement="top" title="Количество на складе"></i></th>
                                    <th width="10%" class="text-center no-sorting"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in products %}
                                    {% set buf = categories.firstWhere('uuid', item.category) %}
                                    <tr>
                                        {# поле для сортировки данных в таблице #}
                                        <td style="display: none">{{ item.order }}</td>
                                        <td>{{ item.vendorcode }}</td>
                                        <td>
                                            <a href="/catalog/{{ buf.address }}/{{ item.address }}" target="_blank">
                                                {{ item.title }}
                                                <i class="fas fa-external-link-alt"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/cup/catalog/product/{{ buf.uuid }}">
                                                {{ buf.title }}
                                            </a>
                                        </td>
                                        <td>{{ item.price|format_number({fraction_digit: 2}) }}</td>
                                        <td>{{ item.field1 }}</td>
                                        <td>{{ item.field2 }}</td>
                                        <td>{{ item.field3 }}</td>
                                        <td class="text-center">{{ item.getVolume() }}</td>
                                        <td class="text-center">{{ item.stock|format_number({fraction_digit: 2}) }}</td>
                                        <td class="text-center">
                                            <div class="btn-group dropdown">
                                                <button class="btn btn-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                    <i class="fas fa-bars"></i>
                                                </button>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a href="/cup/catalog/product/{{ item.uuid }}/edit" class="btn btn-link"><i class="fas fa-edit"></i> Изменить</a>
                                                    </li>
                                                    <li><div class="dropdown-divider"></div></li>
                                                    <li>
                                                        <form action="/cup/catalog/product/{{ item.uuid }}/delete" style="display: inline-block" method="post" onsubmit="return confirm('Вы действительно хотите удалить публикацию?');">
                                                            <button type="submit" class="btn btn-link text-danger">
                                                                <i class="fas fa-trash-alt"></i> Удалить
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% if category.uuid %}
                    <div class="card-footer">
                        <div class="d-flex align-items-center">
                            <a href="/cup/catalog/category/{{ category.uuid }}/edit" class="btn btn-info btn-round ml-auto">
                                <i class="fa fa-edit"></i>
                                Изменить категорию
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">{{ item.uuid ? 'Редактирование статуса заказа' : 'Создание нового статуса заказа' }}</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Наименование',
                                    'type': 'text',
                                    'name': 'title',
                                    'args': {
                                        'value': item.title,
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Порядок',
                                    'type': 'number',
                                    'name': 'order',
                                    'args': {
                                        'value': item.order is not empty ? item.order : list.count() + 1,
                                        'placeholder': '1',
                                        'min': '0'
                                    }
                                } %}
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

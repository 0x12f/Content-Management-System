{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Заказы</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">Список заказов ({{ orders.count() }})</h4>
                        <a href="/cup/catalog/order/add" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Добавить заказ
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table data-table class="table table-striped table-hover" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th width="10%">№ Заказа</th>
                                    <th>Клиент</th>
                                    <th width="10%">Статус</th>
                                    <th width="15%">Дата добавления</th>
                                    <th width="10%" class="text-center no-sorting"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in orders %}
                                    <tr>
                                        <td data-order="{{ item.external_id ? item.external_id : item.date.getTimestamp() }}">
                                            {% if item.external_id %}
                                                {{ item.external_id }} ({{ item.serial }})
                                            {% else %}
                                                {{ item.serial }}
                                            {% endif %}
                                        </td>
                                        <td>{{ item.user_uuid ? users.firstWhere('uuid', item.user_uuid).getName() : item.delivery.client }}</td>
                                        <td>
                                            <span class="badge badge-secondary">{{ item.status }}</span>
                                        </td>
                                        <td data-order="{{ item.date.getTimestamp() }}">{{ item.date|df('d.m.Y H:i') }}</td>
                                        <td class="text-center">
                                            <div class="btn-group">
                                                <div class="btn-group dropdown">
                                                    <button class="btn btn-info btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                        <i class="fas fa-bars"></i>
                                                    </button>
                                                    <ul class="dropdown-menu" role="menu">
                                                        <li>
                                                            <a href="/cup/catalog/order/{{ item.uuid }}/edit" class="btn btn-link"><i class="fas fa-edit"></i>Изменить</a>
                                                        </li>
                                                        <li>
                                                            <div class="dropdown-divider"></div>
                                                        </li>
                                                        <li>
                                                            <form action="/cup/catalog/order/{{ item.uuid }}/delete" style="display: inline-block" method="post" onsubmit="return confirm('Вы действительно хотите удалить заказ?');">
                                                                <button type="submit" class="btn btn-link text-danger">
                                                                    <i class="fas fa-fw fa-trash-alt"></i> Удалить
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

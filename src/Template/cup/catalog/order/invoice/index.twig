{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">{{ 'Invoice template'|locale }}</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <form action="/cup/parameters?return=/cup/catalog/order/invoice" method="post">
                <div class="card">
                    <div class="card-body p-0">
                        <div id="invoice">
                            <style>#invoice [data-input] {padding: 0;}</style>

                            {% include 'cup/editor.twig' with {
                                'name': 'catalog[invoice]',
                                'args': {
                                    'id': 'code',
                                    'text_mode': true,
                                    'value': invoice,
                                }
                            } %}
                        </div>
                    </div>

                    <div class="card-action">
                        <button type="submit" class="btn btn-primary" style="height: 40px;">
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

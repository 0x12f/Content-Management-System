{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            {% include 'cup/form-header.twig' with {
                'item': item,
                'create': 'Create a new tax rate',
                'update': 'Edit tax rate'
            } only %}
        </div>
    </div>
{% endblock %}

{% block content %}
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Title'|locale,
                                    'type': 'text',
                                    'name': 'title',
                                    'args': {
                                        'required': true,
                                        'value': item.title
                                    }
                                } %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {% include 'cup/form.twig' with {
                                    'label': 'Tax Rate'|locale,
                                    'type': 'number',
                                    'name': 'value[rate]',
                                    'args': {
                                        'required': true,
                                        'value': item.value.rate|number_format(2, '.', ' '),
                                        'placeholder': '1',
                                        'step': 'any',
                                        'min': '0',
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Type'|locale,
                                    'type': 'select',
                                    'name': 'value[type]',
                                    'args': {
                                        'required': true,
                                        'option': _({'p': 'Percentage', 'f': 'Fixed Amount'}),
                                        'selected': item.value.type is empty ? 'yes' : item.value.type
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Group'|locale,
                                    'type': 'select',
                                    'name': 'value[group]',
                                    'args': {
                                        'required': true,
                                        'option': _({(NIL): 'All'}|merge(user_group().pluck('title', 'uuid').all())),
                                        'selected': item.value.group ?? NIL
                                    }
                                } %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Enabled'|locale,
                                    'type': 'select',
                                    'name': 'status',
                                    'args': {
                                        'option': _(['yes', 'no']),
                                        'selected': item.status is empty or item.status ? 'yes' : 'no'
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Sort order'|locale,
                                    'type': 'number',
                                    'name': 'order',
                                    'args': {
                                        'value': item.order is not empty ? item.order : list.count() + 1,
                                        'placeholder': '1',
                                        'min': '1'
                                    }
                                } %}
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            {% include 'cup/form-header.twig' with {
                'item': item,
                'create': 'Create a new payment method',
                'update': 'Edit payment method'
            } only %}
        </div>
    </div>
{% endblock %}

{% block content %}
    {% set payment_plugins = [] %}
    {% for plugin in plugins %}
        {% if plugin is instanceof('\\App\\Domain\\Plugin\\AbstractPaymentPlugin') %}
            {% set payment_plugins = payment_plugins|merge({(plugin.getCredentials('name')): plugin.getCredentials('title')|locale}) %}
        {% endif %}
    {% endfor %}

    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Title'|locale,
                                    'type': 'text',
                                    'name': 'title',
                                    'args': {
                                        'required': true,
                                        'value': item.title,
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Plugin'|locale,
                                    'type': 'select',
                                    'name': 'value[plugin]',
                                    'args': {
                                        'option': {'': '---'}|merge(payment_plugins),
                                        'selected': item.value.plugin,
                                    }
                                } %}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Enabled'|locale,
                                    'type': 'select',
                                    'name': 'status',
                                    'args': {
                                        'option': _(['yes', 'no']),
                                        'selected': item is empty or item.status ? 'yes' : 'no'
                                    }
                                } %}
                            </div>
                            <div class="col-md-6">
                                {% include 'cup/form.twig' with {
                                    'label': 'Sort order'|locale,
                                    'type': 'number',
                                    'name': 'order',
                                    'args': {
                                        'value': item.order is not empty ? item.order : list.count() + 1,
                                        'placeholder': '1',
                                        'min': '1'
                                    }
                                } %}
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

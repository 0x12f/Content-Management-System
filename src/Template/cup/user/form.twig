{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">{{ (item ? 'Редактирование пользователя' : 'Создание пользователя')|locale }}</h2>
            </div>
            {% if item %}
                <div class="ml-md-auto py-2 py-md-0">
                    <a href="/cup/user/{{ item.uuid }}/view" class="btn btn-secondary">
                        {{ 'Посмотреть'|locale }}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form method="post" enctype="multipart/form-data">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <ul class="nav nav-pills nav-secondary nav-pills-no-bd ml-auto" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link {{ item ? '' : 'active show' }}" data-toggle="pill" href="#user" role="tab">
                                        {{ 'Пользователь'|locale }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {{ item ? 'active show' : '' }}" data-toggle="pill" href="#contact" role="tab">
                                        {{ 'Контакт'|locale }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">

                            {# Tab: Пользователь #}
                            <div class="tab-pane fade {{ item ? '' : 'active show' }}" id="user" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Логин'|locale,
                                            'type': 'text',
                                            'name': 'username',
                                            'args': {
                                                'value': item.username,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Новый пароль'|locale,
                                            'type': 'text',
                                            'name': 'password',
                                            'postfix': item ? '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('Оставьте пустым, если не хотите менять'|locale) ~ '"></i>' : null,
                                            'args': {
                                                'required': user ? false : true,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Группа'|locale,
                                            'type': 'select',
                                            'name': 'group_uuid',
                                            'args': {
                                                'option': _({(NIL): 'WITHOUT_GROUP'}|merge(groups.pluck('title', 'uuid').all())),
                                                'selected': item.group_uuid ?? parameter('user_group')
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% if item.uuid %}
                                            {% include 'cup/form.twig' with {
                                                'label': 'Статус'|locale,
                                                'type': 'select',
                                                'name': 'status',
                                                'args': {
                                                    'option': _(reference('/App/Domain/Types/UserStatusType::LIST')),
                                                    'selected': item.status
                                                }
                                            } %}
                                        {% endif %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Внешний ID'|locale,
                                            'type': 'text',
                                            'name': 'external_id',
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('Системное поле. Если вы не знаете, зачем это поле - лучше его не трогать.'|locale) ~ '"></i>',
                                            'args': {
                                                'value': item.external_id,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                {% include 'cup/form-image.twig' with { 'entity': item, 'multiple': false } %}
                            </div>

                            {# Tab: Контакт #}
                            <div class="tab-pane fade {{ item ? 'active show' : '' }}" id="contact" role="tabpanel">
                                <div class="row">
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Имя'|locale,
                                            'type': 'text',
                                            'name': 'firstname',
                                            'args': {
                                                'value': item.firstname,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Фамилия'|locale,
                                            'type': 'text',
                                            'name': 'lastname',
                                            'args': {
                                                'value': item.lastname,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Отчество'|locale,
                                            'type': 'text',
                                            'name': 'patronymic',
                                            'args': {
                                                'value': item.patronymic,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Пол'|locale,
                                            'type': 'text',
                                            'name': 'gender',
                                            'args': {
                                                'value': item.gender,
                                                'list': 'unit',
                                            }
                                        } %}

                                        <datalist id="unit">
                                            <option value="{{ 'Мужской'|locale }}">{{ 'Мужской'|locale }}</option>
                                            <option value="{{ 'Женский'|locale }}">{{ 'Женский'|locale }}</option>
                                        </datalist>
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Дата рождения'|locale,
                                            'type': 'date',
                                            'name': 'birthdate',
                                            'args': {
                                                'value': item.birthdate|df('Y-m-d'),
                                                'placeholder': '30.09.1991',
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Телефон'|locale,
                                            'type': 'tel',
                                            'name': 'phone',
                                            'args': {
                                                'value': item.phone,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'E-Mail',
                                            'type': 'email',
                                            'name': 'email',
                                            'args': {
                                                'value': item.email,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Подписан на рассылку'|locale,
                                            'type': 'select',
                                            'name': 'allow_mail',
                                            'args': {
                                                'option': _(['yes', 'no']),
                                                'selected': item.getAllowMail() ? 'yes' : 'no'
                                            }
                                        } %}
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Адрес'|locale,
                                            'type': 'textarea',
                                            'name': 'address',
                                            'args': {
                                                'value': item.address,
                                                'style': 'min-height: 133px;'
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Доп. инфо'|locale,
                                            'message': 'Можно указать любую информацию до 250 символов'|locale,
                                            'type': 'textarea',
                                            'name': 'additional',
                                            'args': {
                                                'value': item.additional,
                                                'style': 'min-height: 133px;'
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Компания'|locale,
                                            'type': 'text',
                                            'name': 'company[title]',
                                            'args': {
                                                'value': item.company.title,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Должность'|locale,
                                            'type': 'text',
                                            'name': 'company[position]',
                                            'args': {
                                                'value': item.company.position,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Регистрационный номер'|locale,
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('ОГРН, ОГРНИП'|locale) ~ '"></i>',
                                            'type': 'text',
                                            'name': 'legal[code]',
                                            'args': {
                                                'value': item.legal.code,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-3">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Налоговый номер'|locale,
                                            'postfix': '<i class="far fa-question-circle" data-toggle="tooltip" data-placement="top" title="' ~ ('ИНН'|locale) ~ '"></i>',
                                            'type': 'text',
                                            'name': 'legal[number]',
                                            'args': {
                                                'value': item.legal.number,
                                            }
                                        } %}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Веб-сайт'|locale,
                                            'type': 'text',
                                            'name': 'website',
                                            'args': {
                                                'value': item.website,
                                            }
                                        } %}
                                    </div>
                                    <div class="col-md-6">
                                        {% include 'cup/form.twig' with {
                                            'label': 'Источник контакта'|locale,
                                            'type': 'textarea',
                                            'name': 'source',
                                            'args': {
                                                'value': item.source,
                                                'style': 'min-height: 75px;'
                                            }
                                        } %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-action">
                        {% include "cup/form-save.twig" %}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'cup/layout.twig' %}

{% block breadcrumb %}
    <div class="page-inner py-5">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
            <div>
                <h2 class="text-white pb-2 fw-bold">Список групп пользователей ({{ groups.count() }})</h2>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <a href="/cup/user/group/add" class="btn btn-primary btn-round ml-auto">
                            <i class="fa fa-plus"></i>
                            Добавить группу
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% embed 'mixin/datatable.twig' %}
                        {% block thead %}
                            <tr>
                                <th>Название</th>
                                <th width="15%" class="d-none d-md-table-cell">Пользователей</th>
                                <th width="20%" class="d-none d-md-table-cell">Права доступа</th>
                                <th width="25%" class="text-right"></th>
                            </tr>
                        {% endblock %}

                        {% block tbody %}
                            {% for group in groups %}
                                {% set users_in_group = users.where('group', group)|count %}
                                <tr>
                                    <td>{{ group.title }}</td>
                                    <td width="15%" class="text-center d-none d-md-table-cell">{{ users_in_group }}</td>
                                    <td width="20%" class="d-none d-md-table-cell">
                                        <code>
                                            {% if group.access %}
                                                Прав доступно: {{ group.access|count }}
                                            {% else %}
                                                Без прав
                                            {% endif %}
                                        </code>
                                    </td>
                                    <td width="25%" class="text-right">
                                        <form action="/cup/user/group/{{ group.uuid }}/delete" style="display: inline-block" method="post" onsubmit="return confirm('Вы действительно хотите удалить группу?');">
                                            <div class="btn-group">
                                                <a href="/cup/user/group/{{ group.uuid }}/edit" class="btn btn-sm btn-info">
                                                    <i class="fas fa-fw fa-edit"></i>
                                                    <span class="d-none d-md-inline-block">Изменить</span>
                                                </a>
                                                <button type="{{ users_in_group ? 'button' : 'submit' }}" class="btn btn-sm btn-danger" {{ users_in_group ? 'data-toggle="tooltip" data-placement="left" title="Нельзя удалить группу, пока в ней есть пользователи"' }}>
                                                    <i class="fas fa-fw fa-trash-alt"></i>
                                                    <span class="d-none d-md-inline-block">Удалить</span>
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

<div class="col-lg-4 col-sm-6">
    <div class="product-item" data-catalog-product>
        <div class="pi-pic">
            {#<div class="tag-sale">ON SALE</div>#}
            <a href="/{{ parameter('catalog_address', 'catalog') }}/{{ product.address }}">
                <img src="{{ files.firstWhere('item_uuid', product.uuid).getPublicPath('middle') }}" style="max-height: 300px; width: 100%; object-fit: contain; object-position: center center;" alt="{{ product.title }}">
            </a>
            <div class="pi-links">
                {# add class item_add to btn #}
                <a href="javascript:;" class="add-card" data-catalog-product-add><i class="flaticon-bag"></i><span>В корзину</span></a>
            </div>
        </div>
        <div class="pi-text">
            <a href="/{{ parameter('catalog_address', 'catalog') }}/{{ product.address }}">
                <h6>{{ product.price }}</h6>
                <p>{{ product.title }}</p>
            </a>
        </div>

        {# include product options #}
        {% include 'catalog.product.options.twig' with {'categories': categories, 'product': product, 'files': files} only %}
    </div>
</div>

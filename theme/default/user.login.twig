{% extends 'main.twig' %}

{% block title %}Login | {{ parent() }}{% endblock %}

{% block page %}
    {% include 'common/breadcrumbs.twig' with {
        'title': 'Login'
    } %}

    <!-- Start Account Area -->
    <div class="account-login section">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                    <form class="card login-form" method="post">
                        <div class="card-body">
                            <div class="title">
                                <h3>Login Now</h3>
                                <p>You can login using your social media account or email address.</p>
                            </div>

                            {% if provider == 'self' %}
                                {% set another = false %}
                                {% if parameter('user_auth_code_is_enabled', 'no') == 'yes' %}
                                    {% set another = true %}
                                    <a href="?provider=code" class="btn btn-info btn-block text-uppercase">Login via Code</a>
                                {% endif %}

                                <div class="social-login">
                                    <div class="row">
                                        {% for type in ['facebook', 'vk'] %}
                                            {% if parameter('user_auth_' ~ type ~ '_is_enabled', 'no') == 'yes' %}
                                                {% set another = true %}
                                                <div class="col-lg-6 col-md-6 col-12">
                                                    <a href="{{ oauth_url(type) }}" class="btn {{ type }}-btn" >
                                                        {{ type }} login
                                                    </a>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>

                                {% if another %}
                                    <div class="alt-option">
                                        <span>Or</span>
                                    </div>
                                {% endif %}
                            {% endif %}

                            {% if identifier == 'email' %}
                                {% include 'mixin/form.twig' with {
                                    'label': 'E-Mail',
                                    'type': 'email',
                                    'name': 'email',
                                } %}
                            {% elseif identifier == 'username' %}
                                {% include 'mixin/form.twig' with {
                                    'label': 'Username',
                                    'type': 'text',
                                    'name': 'username',
                                } %}
                            {% else %}
                                {% include 'mixin/form.twig' with {
                                    'label': 'Phone',
                                    'type': 'tel',
                                    'name': 'phone',
                                } %}
                            {% endif %}

                            {% if provider == 'code' and parameter('user_auth_code_is_enabled', 'no') == 'yes' %}
                                {% include 'mixin/form.twig' with {
                                    'label': 'Code',
                                    'type': 'text',
                                    'name': 'code',
                                    'postfix_btn': '<button class="btn btn-info btn-block text-uppercase px-2" type="submit" name="sendcode">Send code</button>',
                                    'args': {
                                        'placeholder': '000-000-000',
                                        'autocomplete': false,
                                    },
                                } %}
                            {% else %}
                                {% include 'mixin/form.twig' with {
                                    'label': 'Password',
                                    'type': 'password',
                                    'name': 'password',
                                } %}
                            {% endif %}

                            <div class="button">
                                <button class="btn" type="submit">Login</button>
                            </div>
                            <p class="outer-link">Don't have an account? <a href="/user/register">Register here </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- End Account Area -->
{% endblock %}

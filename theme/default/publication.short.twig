{% set category = categories.firstWhere('uuid', item.category) %}

<div class="row">
    <article class="publication" data-uuid="{{ item.uuid }}">
        <h2><a href="/{{ item.address }}">{{ item.title }}</a></h2>
        <div>
            <ul class="meta">
                <li><a href="/{{ category.address }}">{{ category.title }}</a></li>
                <li>{{ item.date|df }}</li>
                <li>{{ item.user.getName('short') }}</li>
            </ul>
        </div>
        <div>
            {{ item.content.short|raw }}
        </div>
    </article>
</div>

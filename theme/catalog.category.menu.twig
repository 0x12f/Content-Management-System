{% for node in categories.where('parent', '=', parent).sortBy('order') %}
    <li class="">
        <a href="/catalog/{{ node.address }}">{{ node.title }}</a>
        {% set subNodes = categories.where('parent', '=', node.uuid).sortBy('order') %}

        {% if subNodes.count() %}
            <ul class="sub-menu">
                {% include 'catalog.category.menu.twig' with {'categories':categories,'parent':node.uuid} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}

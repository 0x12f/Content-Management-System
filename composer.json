    "authors": [
        {
            "name": "Aleksey Ilyin",
            "email": "alksily@icloud.com",
            "homepage": "https://www.facebook.com/aleksey.ily",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "slim/twig-view": "^2.4",
        "slim/http-cache": "^0.4.0",
        "doctrine/orm": "^2",
        "aengine/entity": "^1.0",
        "aengine/validator": "^1.0",
        "aengine/support": "^1.0",
        "twig/extensions": "^1.5",
        "phive/twig-extensions-deferred": "^2.0",
        "ramsey/uuid": "^3.8",
        "ramsey/uuid-doctrine": "^1.5",
        "phpmailer/phpmailer": "^6.0",
        "pragmarx/google2fa": "^3.0",
        "bacon/bacon-qr-code": "^1.0",
        "vitalybaev/google-merchant-feed": "^1.0",
        "bukashk0zzz/yml-generator": "^1.6",
        "samdark/sitemap": "^2.2",
        "monolog/monolog": "^1.17",
        "runcmf/runtracy": "^0.2.10",
        "twig/intl-extra": "3.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "classmap": [
            "src"
        ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"@chmod('./', 0777);\"",
            "php -r \"@chmod('./app', 0555);\"",
            "php -r \"@chmod('./config', 0555);\"",
            "php -r \"@chmod('./public', 0777);\"",
            "php -r \"@chmod('./src', 0775);\"",
            "php -r \"@chmod('./themes', 0555);\"",
            "php -r \"@chmod('./var', 0777);\"",
            "php -r \"@chmod('./var/cache', 0777);\"",
            "php -r \"@chmod('./var/log', 0777);\"",
            "php -r \"@chmod('./var/upload', 0777);\"",
            "php -r \"@chmod('./vendor', 0775);\"",
            "php ./vendor/bin/doctrine orm:schema-tool:create",
            "php -r \"@chmod('./var/database.sqlite', 0777);\""
        ],
        "post-install-cmd": [
            "php -r \"@chmod('./', 0777);\"",
            "php -r \"@chmod('./app', 0555);\"",
            "php -r \"@chmod('./config', 0555);\"",
            "php -r \"@chmod('./public', 0777);\"",
            "php -r \"@chmod('./src', 0775);\"",
            "php -r \"@chmod('./themes', 0555);\"",
            "php -r \"@chmod('./var', 0777);\"",
            "php -r \"@chmod('./var/cache', 0777);\"",
            "php -r \"@chmod('./var/log', 0777);\"",
            "php -r \"@chmod('./var/upload', 0777);\"",
            "php -r \"@chmod('./vendor', 0775);\"",
            "php -r \"@chmod('./var/database.sqlite', 0777);\"",
            "php ./vendor/bin/doctrine orm:schema-tool:update --force",
            "php -r \"@chmod('./var/database.sqlite', 0777);\""
        ],
        "post-update-cmd": [
            "php -r \"@chmod('./', 0777);\"",
            "php -r \"@chmod('./app', 0555);\"",
            "php -r \"@chmod('./config', 0555);\"",
            "php -r \"@chmod('./public', 0777);\"",
            "php -r \"@chmod('./src', 0775);\"",
            "php -r \"@chmod('./themes', 0555);\"",
            "php -r \"@chmod('./var', 0777);\"",
            "php -r \"@chmod('./var/cache', 0777);\"",
            "php -r \"@chmod('./var/log', 0777);\"",
            "php -r \"@chmod('./var/upload', 0777);\"",
            "php -r \"@chmod('./vendor', 0775);\"",
            "php -r \"@chmod('./var/database.sqlite', 0777);\"",
            "php ./vendor/bin/doctrine orm:schema-tool:update --force"
        ]
    }
}
